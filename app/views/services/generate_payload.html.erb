<% if @user_info.present? %>
  UserName - <%= @user_info[:username] %>
  Email - <%= @user_info[:user_attributes].select {|data| data[:name] == "email"}.first.value %>
<% end %>

<br/> <br/>

Signup:

<%= simple_form_for(:dummy, url: signup_congito_path) do |f| %>
  <%= f.input :username, required: true, :label => false, :input_html => {placeholder: "UserName"} %>
  <%= f.input :email, required: true, :label => false, :input_html => {placeholder: "Email"} %>
  <%= f.input :password, required: true, :label => false, :input_html => {placeholder: "Password"} %>
  <%= f.button :submit, "Submit" %>
<% end %>

